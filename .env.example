# === TARGETS ===
F1_HOST="f1.emaktalk.com"
F2_HOST="f2.emaktalk.com"

# Comma-separated carrier sources (IP or CIDR)
# e.g. "198.51.100.10,198.51.100.11,203.0.113.0/24"
CARRIER_SOURCES="198.51.100.10,198.51.100.11,198.51.100.12,198.51.100.13,198.51.100.14"

# === PostgREST (read-only endpoint) ===
POSTGREST_KEY="XXXXXXXXX"
POSTGREST_RO_DB_URL="https://dev-ro-db.emaktalk.com/api"

# Path to the export endpoint (RPC or view). Default uses an RPC:
#   create function public.edge_export_routing() returns table(num text, target text) ...
POSTGREST_EXPORT_PATH="/rpc/edge_export_routing"

# Auth header style:
#   Option 1 (default): apikey: <POSTGREST_KEY>
POSTGREST_AUTH_HEADER="apikey"
POSTGREST_AUTH_SCHEME=""
#   Option 2: Authorization: Bearer <POSTGREST_KEY>
# POSTGREST_AUTH_HEADER="Authorization"
# POSTGREST_AUTH_SCHEME="Bearer"

# === Kamailio listener / timer ===
LISTEN_ADDR="0.0.0.0"
LISTEN_PORT="5060"
# ADVERTISE_ADDR="203.0.113.99"   # optional; OVH floating IP
ADVERTISE_ADDR=""
PULL_INTERVAL="2m"
