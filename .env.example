# ====== PostgREST (READ-ONLY) ======
POSTGREST_KEY='replace-with-jwt'
POSTGREST_RO_DB_URL='https://prod-ro-db.emaktalk.com/api'
POSTGREST_VIEW='edge_export_routing_view'   # must return JSON rows with { "num": "+E164", "target": "f1|f2" }

# ====== Kamailio listen/advertise ======
SIP_LISTEN_ADDR='0.0.0.0'   # Kamailio listen IP
SIP_LISTEN_PORT='5060'
# Optional: public advertised address (e.g. floating IP). Leave empty to skip.
SIP_ADVERTISE_ADDR=''

# ====== Trusted carrier IPs (space-separated list of single IPs or CIDRs) ======
CARRIER_WHITELIST='198.51.100.10 198.51.100.11 198.51.100.12 198.51.100.13 198.51.100.14'

# ====== Target FreeSWITCH hosts to forward INVITEs to ======
F1_SIP='sip:f1.emaktalk.com:5060;transport=udp'
F2_SIP='sip:f2.emaktalk.com:5060;transport=udp'

# ====== Paths ======
DEST_MAP_PATH='/etc/kamailio/dest.map'        # flat file we write (optional, for inspection)
KAMCFG_PATH='/etc/kamailio/kamailio.cfg'      # where to render kamailio.cfg
KAM_USER='kamailio'
KAM_GROUP='kamailio'

# ====== Timer (how often to pull) ======
PULL_MINUTES='1'
